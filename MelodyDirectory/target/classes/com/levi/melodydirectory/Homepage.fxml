<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<ScrollPane hbarPolicy="NEVER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="420.0" prefWidth="720.0" vbarPolicy="ALWAYS" xmlns="http://javafx.com/javafx/11" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.levi.melodydirectory.HomePageController">
   <content>
      <VBox prefHeight="420.0" prefWidth="720.0">
         <children>
            <HBox alignment="CENTER" prefHeight="20.0">
               <children>
                  <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="200.0" HBox.hgrow="ALWAYS">
                     <children>
                        <Label alignment="CENTER" text="Melody Directory">
                           <HBox.margin>
                              <Insets />
                           </HBox.margin>
                        </Label>
                     </children>
                  </HBox>
                  <HBox fx:id="topRightHBox" alignment="CENTER_RIGHT" prefHeight="100.0" prefWidth="200.0" spacing="5.0" HBox.hgrow="ALWAYS">
                     <children>
                        <StackPane prefHeight="150.0" prefWidth="200.0">
                           <children>
                              <Button fx:id="loginPage" mnemonicParsing="false" onAction="#loginButtonPressed" prefHeight="15.0" prefWidth="52.0" text="Login" StackPane.alignment="CENTER_RIGHT" />
                              <Button fx:id="logoutButton" disable="true" mnemonicParsing="false" onAction="#logoutButtonPressed" text="Logout" visible="false" StackPane.alignment="CENTER_RIGHT" />
                           </children>
                        </StackPane>
                        <TextField fx:id="searchBar" onKeyTyped="#keyTyped" text="Search">
                           <HBox.margin>
                              <Insets right="15.0" />
                           </HBox.margin>
                           <padding>
                              <Insets right="15.0" />
                           </padding>
                           <opaqueInsets>
                              <Insets />
                           </opaqueInsets>
                        </TextField>
                     </children>
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                  </HBox>
               </children>
               <VBox.margin>
                  <Insets />
               </VBox.margin>
            </HBox>
            <VBox prefHeight="200.0" prefWidth="100.0">
               <children>
                  <Label text="Top Rated">
                     <VBox.margin>
                        <Insets left="1.0" />
                     </VBox.margin>
                  </Label>
                  <ListView fx:id="topRatedSlider" orientation="HORIZONTAL" prefHeight="200.0" prefWidth="200.0" />
               </children>
            </VBox>
            <VBox prefHeight="200.0" prefWidth="100.0">
               <children>
                  <Label text="Recently Added">
                     <VBox.margin>
                        <Insets left="1.0" />
                     </VBox.margin>
                  </Label>
                  <ListView fx:id="recentlyAddedSlider" orientation="HORIZONTAL" prefHeight="200.0" prefWidth="200.0" />
               </children>
            </VBox>
         </children>
         <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </padding>
      </VBox>
   </content>
</ScrollPane>
