<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>

<fx:root alignment="CENTER" prefHeight="20.0" type="javafx.scene.layout.HBox" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="200.0" HBox.hgrow="ALWAYS">
         <children>
            <Label alignment="CENTER" text="Melody Directory">
               <HBox.margin>
                  <Insets />
               </HBox.margin>
            </Label>
         </children>
      </HBox>
      <HBox fx:id="topRightHBox" alignment="CENTER_RIGHT" prefHeight="100.0" prefWidth="200.0" spacing="5.0" HBox.hgrow="ALWAYS">
         <children>
            <StackPane prefHeight="150.0" prefWidth="200.0">
               <children>
                  <Button fx:id="loginPage" mnemonicParsing="false" onAction="#loginButtonPressed" prefHeight="15.0" prefWidth="52.0" text="Login" StackPane.alignment="CENTER_RIGHT" />
                  <Button fx:id="logoutButton" disable="true" mnemonicParsing="false" onAction="#logoutButtonPressed" text="Logout" visible="false" StackPane.alignment="CENTER_RIGHT" />
               </children>
            </StackPane>
            <TextField fx:id="searchBar" onKeyTyped="#keyTyped" text="Search">
               <HBox.margin>
                  <Insets />
               </HBox.margin>
               <padding>
                  <Insets right="15.0" />
               </padding>
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
            </TextField>
         </children>
         <HBox.margin>
            <Insets />
         </HBox.margin>
      </HBox>
   </children>
</fx:root>
